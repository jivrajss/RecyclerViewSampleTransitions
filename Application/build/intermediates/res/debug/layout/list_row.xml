<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:layout_margin="10dp"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.android.xyztouristattractions.ui.DynamicImageView
            android:id="@+id/viewImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/dummy_image"
            android:transitionName="image" />

        <ImageView
            android:id="@+id/shortlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/shortlist_off" />

        <TextView
            android:id="@+id/overlaytext"
            style="?android:textAppearanceSmallInverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/viewImage"
            android:layout_alignEnd="@+id/viewImage"
            android:layout_alignLeft="@+id/viewImage"
            android:layout_alignRight="@+id/viewImage"
            android:layout_alignStart="@+id/viewImage"
            android:background="@color/text_background"
            android:gravity="center"
            android:padding="@dimen/tiny_margin"
            android:visibility="gone"
            tools:text="Overlay" />


        <TextView
            android:id="@+id/cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/viewImage"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:drawableLeft="@drawable/inr_sign"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/inr_sign"
            android:text="70 Lacs"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cost"
            android:layout_alignLeft="@+id/cost"
            android:layout_alignStart="@+id/cost"
            android:layout_marginBottom="3dp"
            android:text="Veera Desai, Andheri West"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/buildingType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/address"
            android:layout_alignLeft="@+id/cost"
            android:layout_alignStart="@+id/cost"
            android:layout_marginBottom="3dp"
            android:text="1 BHK Apartment"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </RelativeLayout>

</FrameLayout><!-- From: file:/C:/Users/jivraj.singh/GitHubProjects/XYZTouristAttractions1/Application/src/main/res/layout/list_row.xml -->